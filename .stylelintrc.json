{
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "lower"
    },
    "ignoreFiles": [
      "dist/*"
    ],
    "overrides": [
      {
        "files": ["*.scss", "**/*.scss"],
        "customSyntax": "postcss-scss"
      },
      {
        "files": ["**/*.css", "modules/chats/**/*.css"],
        "rules": {
          "alpha-value-notation": "percentage"
        }
      }
    ]
  } 
